<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:backgroundTint="#0C0000"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="108dp"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-medium"
        android:hint="Weight"
        android:text="Weight"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.164" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="110dp"
        android:layout_height="47dp"
        android:fontFamily="sans-serif-medium"
        android:hint="Height"
        android:text="Height"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.286" />

    <Button
        android:id="@+id/button"
        android:layout_width="131dp"
        android:layout_height="67dp"
        android:backgroundTint="#B63AEC"
        android:fontFamily="sans-serif-medium"
        android:text="Calculate"
        android:textSize="15sp"
        app:cornerRadius="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="277dp"
        android:layout_height="94dp"
        android:fontFamily="sans-serif-medium"
        android:hint="Your are :"
        android:text="You are :"
        android:textColor="#FDFBFB"
        android:textColorHint="#F8F3F3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.772" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="272dp"
        android:layout_height="61dp"
        android:fontFamily="sans-serif-medium"
        android:text="Your BMI is :"
        android:textColor="#FDF9F9"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.611" />

    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="233dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="in Kg"
        android:inputType="numberDecimal"
        android:outlineAmbientShadowColor="#EFECEC"
        android:outlineSpotShadowColor="#FDFDFD"
        android:shadowColor="#FFFCFC"
        android:textColor="#FAF7F7"
        android:textColorHint="#F6F4F4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162" />

    <EditText
        android:id="@+id/editTextNumberDecimal2"
        android:layout_width="233dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="in cm"
        android:inputType="numberDecimal"
        android:textColor="#FDF8F8"
        android:textColorHint="#FAF7F7"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.284" />
</androidx.constraintlayout.widget.ConstraintLayout>